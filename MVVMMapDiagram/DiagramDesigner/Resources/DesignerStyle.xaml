                                Background="Transparent"
                                Cursor="SizeAll" />


                            <ContentPresenter
                                x:Name="PART_ContentPresenter"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Canvas.ZIndex="1"
                                Content="{TemplateBinding Content}" />

                            <ItemsControl
                                Canvas.Left="{Binding Left}"
                                Canvas.Top="{Binding Top}"
                                MinWidth="{Binding ItemWidth}"
                                MinHeight="{Binding ItemHeight}"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Canvas.ZIndex="2"
                                ClipToBounds="False"
                                ItemContainerStyleSelector="{x:Static s:DesignerItemsControlItemStyleSelector.Instance}"
                                ItemsSource="{Binding Path=Items}">

                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel
                                            MaxWidth="{Binding ItemWigth}"
                                            MaxHeight="{Binding ItemHeight}"
                                            Background="AliceBlue" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>

                            <StackPanel
                                MinWidth="10"
                                MinHeight="5"
                                Margin="-5"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top">
                                <Button
                                    x:Name="add"
                                    Background="Green"
                                    Command="{Binding AddItemCommand}"
                                    CommandParameter="null">
                                    Add
                                </Button>
                                <Button
                                    x:Name="del"
                                    Background="Red"
                                    Command="{Binding RemoveItemCommand}"
                                    CommandParameter="null">
                                    Del
                                </Button>
                            </StackPanel>

                            <Grid x:Name="PART_ConnectorDecorator">
                                <c:RotateThumb
                                    Width="7"
                                    Height="7"
                                    Margin="0,-20,0,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Cursor="Hand"
                                    Visibility="{Binding Path=IsSelected, Converter={x:Static s:BoolToVisibilityConverter.Instance}}" />

                                <c:ResizeThumb
                                    Margin="-5"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Visibility="{Binding Path=IsSelected, Converter={x:Static s:BoolToVisibilityConverter.Instance}}" />

                                <c:ResizeThumb
                                    Margin="-5"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Visibility="{Binding Path=IsSelected, Converter={x:Static s:BoolToVisibilityConverter.Instance}}" />

                                <c:ResizeThumb
                                    Margin="-5"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Bottom"
                                    Visibility="{Binding Path=IsSelected, Converter={x:Static s:BoolToVisibilityConverter.Instance}}" />

                                <c:ResizeThumb
                                    Margin="-5"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Bottom"
                                    Visibility="{Binding Path=IsSelected, Converter={x:Static s:BoolToVisibilityConverter.Instance}}" />

                                <s:Connector
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
