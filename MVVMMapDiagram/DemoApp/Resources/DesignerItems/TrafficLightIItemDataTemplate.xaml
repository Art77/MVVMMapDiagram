<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:DiagramDesigner.Controls;assembly=DiagramDesigner"
    xmlns:local="clr-namespace:DemoApp"
    xmlns:poly="clr-namespace:DiagramDesigner.Controls;assembly=DiagramDesigner">

    <!--  DataTemplate for DesignerCanvas look and feel  -->
    <DataTemplate DataType="{x:Type local:TrafficLightIItemViewModel}">
        <Grid>

           <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                <poly:RoundedCornersPolygon 
                x:Name="polygon"
                ConfinesPoints="{Binding Path=Points}"
                Fill="Firebrick"
                IsHitTestVisible="False"
                Stroke="Black"
                StrokeThickness="1"
                UseRoundnessPercentage="False"
                RenderTransformOrigin="0.5,1"
                TypeShape="Polygon" />
            </Grid>

            <Button
                Margin="5"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Command="{Binding ShowDataChangeWindowCommand}"
                Content="HostUrl"
                Template="{StaticResource infoButtonTemplate}" />
        </Grid>
        <!--<DataTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="true">
                <Setter TargetName="polygon" Property="UseRoundnessPercentage" Value="true" />
            </Trigger>
        </DataTemplate.Triggers>-->
    </DataTemplate>

    <!--  DataTemplate for Popup look and feel  -->
    <DataTemplate DataType="{x:Type local:TrafficLightIItemData}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Label
                Grid.Row="0"
                Margin="5"
                Content="HostUrl" />
            <TextBox
                Grid.Row="1"
                Width="150"
                Margin="5"
                HorizontalAlignment="Left"
                Text="{Binding HostUrl}" />
        </Grid>
    </DataTemplate>



</ResourceDictionary>